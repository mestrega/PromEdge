{
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "allowJs": true,
      "lib": ["dom", "es6"],
      "baseUrl": "./src"
    },
    "exclude": [
      "node_modules",
      "dist",
      "files"
    ],
    "include": [
      "src/**/*.ts",
      "tests/**/*.spec.ts"
    ]
  }